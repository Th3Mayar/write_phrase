---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div>
  <li class="link-input">
    <label for="Whrite phrase">
      <h2>Whrite Phrase</h2>
      <input type="text" />
    </label>
  </li>
</div>

<style>
  h2 {
    margin-top: 0;
  }

  .link-input {
    list-style: none;
    display: flex;
    padding: 50px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }

  input {
    width: 180%;
    padding: 10px;
    border: none;
    background-color: #23262d;
    color: #000000;
    border: 1px solid #fff;
	align-items: center;
	border-radius: 7px;
	font-size: 1.5em;
	font-family: "Roboto", sans-serif;
	font-weight: 300;
	background-image: linear-gradient(45deg, #f3ec78 50%, transparent 50%);
	background-size: 400%;
	background-position: 100%;
	transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1)
  }

   input:focus {
	background-position: 0;
  } 

  input {
	background-position: 0;
  }

  /*quiero que el  input se vaya haciendo mas alto a medida que se complete una linea  */
  input {
	transition: background-size 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  } 

</style>
